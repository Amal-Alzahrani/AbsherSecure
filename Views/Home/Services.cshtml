@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "الخدمات";
}
<h2 class="text-center mb-4">الخدمات</h2>

<div class="services-grid">
    <div class="service-card">
        <img src="~/images/identity.jpg" alt="هوية" style="width:60px" />
        <h3>هويتي الرقمية</h3>
        <p>عرض بيانات الهوية، الجهات النشطة، رقم التتبع...</p>
        <a href="/Identity"><button class="btn btn-primary">عرض</button></a>
    </div>

    <div class="service-card">
        <img src="~/images/issue.jpg" alt="اصدار" style="width:60px" />
        <h3>إصدار</h3>
        <p>اصدار هوية/جواز/تأشيرة جديدة</p>
        <a href="/Issue"><button class="btn btn-primary">دخول</button></a>
    </div>

    <div class="service-card">
        <img src="~/images/renew.jpg" alt="تجديد" style="width:60px" />
        <h3>تجديد</h3>
        <p>تعديل البيانات أو تأكيد فوري للتجديد</p>
        <a href="/Renew"><button class="btn btn-primary">دخول</button></a>
    </div>

    <div class="service-card">
        <img src="~/images/report.jpg" alt="بلاغ" style="width:60px" />
        <h3>رفع بلاغ</h3>
        <p>رفع بلاغ فقدان الهوية</p>
        <a href="/Report"><button class="btn btn-primary">رفع بلاغ</button></a>
    </div>
</div>