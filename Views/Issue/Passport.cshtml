@model AbsherSecure1.Models.PassportRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "إصدار جواز سفر جديد";
}

<h2 class="text-center mb-4">إصدار جواز سفر</h2>

<div class="card shadow p-4" style="max-width: 600px; margin: auto; direction: rtl;">
    <form asp-action="Passport" method="post">

        <!-- الاسم -->
        <div class="mb-3">
            <label class="form-label">الاسم الكامل</label>
            <input asp-for="FullName" class="form-control" required />
        </div>

        <!-- رقم الهوية -->
        <div class="mb-3">
            <label class="form-label">رقم الهوية</label>
            <input asp-for="NationalId" class="form-control" pattern="^\d{10}$" placeholder="10 أرقام" required />
        </div>

        <!-- مدة الصلاحية -->
        <div class="mb-3">
            <label class="form-label">مدة صلاحية الجواز</label>
            <select asp-for="PassportValidityYears" class="form-select">
                <option value="5">5 سنوات</option>
                <option value="10">10 سنوات</option>
            </select>
        </div>

        <!-- طريقة التسليم -->
        <div class="mb-3">
            <label class="form-label">طريقة التسليم</label>
            <input asp-for="DeliveryMethod" class="form-control" placeholder="مثال: عبر البريد" required />
        </div>

        <!-- عنوان التوصيل -->
        <div class="mb-3">
            <label class="form-label">عنوان التوصيل</label>
            <input asp-for="DeliveryAddress" class="form-control" required />
        </div>

        <!-- صورة شخصية -->
        <div class="mb-3">
            <label class="form-label">صورة شخصية</label>
            <input asp-for="Photo" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">إصدار الجواز</button>

    </form>
</div>