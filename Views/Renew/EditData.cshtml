@model AbsherSecure1.Models.RenewalRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "تعديل البيانات";
}

<h2 class="text-center mb-4">تعديل بيانات الهوية</h2>

<div class="form-card">
    <form asp-action="SubmitEditData" method="post">
        <div class="form-row">
            <label>الاسم الكامل</label>
            <input name="FullName" value="@Model.FullName" required />
        </div>

        <div class="form-row">
            <label>رقم الهوية</label>
            <input name="IdNumber" value="@Model.IdNumber" required />
        </div>

        <div class="form-row">
            <label>العنوان</label>
            <input name="Address" value="@Model.Address" />
        </div>

        <div class="form-row">
            <label>رقم الجوال</label>
            <input name="Phone" value="@Model.Phone" />
        </div>

        <button type="submit" class="btn btn-primary">حفظ التعديل والانتقال للتحقق</button>
    </form>
</div