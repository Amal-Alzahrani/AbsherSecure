@model AbsherSecure1.Models.RenewalRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "تجديد";
}
<h2 class ="text-center mb-4">تجديد الهوية</h2>

<div class="form-card">
    <form asp-action="Index" method="post">
        @Html.AntiForgeryToken()
        <div class="form-row">
            <label>الاسم كامل</label>
            <input name="FullName" required />
        </div>
        <div class="form-row">
            <label>رقم الهوية</label>
            <input name="IdNumber" required />
        </div>
        <!-- صورة شخصية -->
        <div class="form-row">
            <label class="form-label">صورة شخصية</label>
            <input asp-for="Photo" type="file" class="form-control" />
        </div>

        <div style="display:flex; gap:12px;">
            <label><input type="checkbox" asp-for="EditData" /> تعديل البيانات</label>
            <label><input type="checkbox" asp-for="ConfirmNow" /> تأكيد فوري</label>
        </div>

        <button type="submit" class="btn btn-primary">التالي </button>
    </form>
</div>